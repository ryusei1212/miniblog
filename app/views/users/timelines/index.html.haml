.row.mt-5
  .col-4
    = render 'users/posts/form', post: @post
  .col-8
    - @timelines.each do |post|
      .card.mb-2.w-75.mx-auto
        .card-header
          - if post.user.image.attached?
            = image_tag post.user.image, class: 'rounded-circle', size: '25x25'
            = post.user.name
          - else
            = image_tag 'default.jpeg', size: '25x25'
            = post.user.name
        .card-body
          .card-text
            %p= link_to post.content, post_path(post), class: 'text-reset text-decoration-none'
            - if post.image.attached?
              = image_tag post.image, alt: '画像', width: '10%', height: '10%'
            .d-flex
              %p.me-1= l post.created_at
              = render 'shared/like_link', post:
              - if post.likes.count.positive?
                %span.ms-1= post.likes.count
              - if current_user.posts.include?(post)
                = link_to edit_post_path(post), class: 'text-reset ms-auto' do
                  %i.bi.bi-pen-fill
