%h2.mt-3= t('.forgot_your_password')
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }
  .form-actions
    = f.button :submit, t('.forgot_your_password'), class: 'btn btn-primary'
= render "users/shared/links"
